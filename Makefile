###############################################################################
# Makefile
###############################################################################

TEX = $(wildcard *.tex)
PDF = $(TEX:.tex=.pdf)

###############################################################################

all: $(PDF)

auto:
	latexmk -bibtex -f -pdf -pvc

clean:
	latexmk -C
	$(RM) *.aux *.bbl *.blg *.tdo *.spl *~

###############################################################################

%.pdf: %.tex
	latexmk -bibtex -pdf $*

###############################################################################

.NOEXPORT:

###############################################################################

